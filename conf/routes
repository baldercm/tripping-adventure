# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /scala                      controllers.ApplicationScala.index

# Curso
GET     /curso                      controllers.Cursos.index()
POST    /curso/create               controllers.Cursos.create()
POST    /curso/createAjax           controllers.Cursos.createAjax()
GET     /curso/list                 controllers.Cursos.listJson()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
