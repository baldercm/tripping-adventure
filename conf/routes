# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                            controllers.Application.index()
GET    /scala                       controllers.ApplicationScala.index()

# Curso
GET    /cursos                      controllers.Cursos.index()
GET    /curso/:id                   controllers.Cursos.view(id: Long)
GET    /curso                       controllers.Cursos.list()
POST   /curso                       controllers.Cursos.create()


# Javascript routing
GET    /assets/javascripts/routes   controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                controllers.Assets.at(path="/public", file)
